@{
    ViewData["Title"] = "Sales Assister";
}

@model SalesAssister.Models.Client

<h3>Add Contact Notes</h3>

<button class="btn btn-xs btn-warning" onclick="myFunction()">Hide Form</button>

@using (Html.BeginForm("addNotes", "Contacts"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <input type="hidden" name="ClientId" value="@Model.ClientId" />

    <div>Meeting Notes</div>
    <textarea class="textBox" type="text" name="Notes" value="@ViewBag.Notes"></textarea>

    <div>Date</div>
    <input type="date" name="Date" value="@ViewBag.Date" />

    <br />
    <br />
    <div>
        <input type="submit" value="Save" class="btn btn-warning" />
    </div>
}
