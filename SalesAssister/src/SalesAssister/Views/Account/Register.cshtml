@{
    ViewData["Title"] = "Sales Assister";
    
}

@using SalesAssister.ViewModels

@model RegisterViewModel
<br />
<h4>Register</h4>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="form-group">
        <div>
            @Html.LabelFor(m => m.Email)
        </div>
        <div>
            <input type="text" name="Email" size="30" />
        </div>
    </div>
   
    <div class="form-group">
        <div>
            @Html.LabelFor(m => m.Password): <span class="small">(Password requires at least six characters, a capital letter, a digit and a special character)</span>
        </div>
        <div>
            <input type="password" name="Password" size="30" />
        </div>
    </div>
    
    <div class="form-group">
        <div>
            @Html.LabelFor(m => m.ConfirmPassword)
        </div>
        <div>
            <input type="password" name="ConfirmPassword" size="30" />
        </div>
    </div>
    
    <input type="submit" value="SUBMIT" class="btn btn-success" />
}

