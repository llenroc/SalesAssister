@{
    ViewData["Title"] = "Sales Assister";
}

@model SalesAssister.Models.Client

<h3 class="salesPeople">EDIT: @Html.DisplayFor(model => model.Name)</h3>
<button class="btn btn-xs btn-warning" onclick="myFunction()">Hide Form</button>
<br />
<br />
@using (Html.BeginForm("Edit", "Clients"))
{
    <input type="hidden" name="ClientId" value="@Model.ClientId" />

    <div class="form-group">
        
            <div>
                @Html.LabelFor(model => model.Name)
            </div>
            <div>
                @Html.EditorFor(model => model.Name)
            </div>
            
            <div>
                @Html.LabelFor(model => model.Email)
            </div>
            <div>
                @Html.EditorFor(model => model.Email)
            </div>
        
            <div>
                @Html.LabelFor(model => model.Phone)
            </div>
            <div>
                @Html.EditorFor(model => model.Phone)
            </div>
    </div>
    <input type="submit" value="Edit" class="btn btn-warning" />
}

