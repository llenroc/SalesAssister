@{
    ViewData["Title"] = "Sales Assister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IList<SalesAssister.Models.Client>

<h3 class="salesPeople">@Html.DisplayFor(x => x[0].salesperson.Name)'s Clients</h3>

<table class="table">
    <tr>
        <th>
            <p>NAME</p>
        </th>
        <th>
            <p>EMAIL</p>
        </th>
        <th>
            <p>PHONE</p>
        </th>
    </tr>
  @foreach (var client in Model)
  {
      <tr>
          <td>@Html.DisplayFor(x => client.Name)</td>
          <td>@Html.DisplayFor(x => client.Email)</td>
          <td>@Html.DisplayFor(x => client.Phone)</td>
      </tr>   
  }
</table>




    
